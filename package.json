{
  "name": "agile-flow",
  "version": "1.0.0",
  "description": "Academic Task Management System - Full-stack task management for educational institutions",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n \"API,WEB\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "npm run server",
    "clean": "rm -rf backend/node_modules frontend/node_modules node_modules",
    "clean-install": "npm run clean && npm run install-all",
    "backend-install": "cd backend && npm install",
    "frontend-install": "cd frontend && npm install"
  },
  "keywords": [
    "task-management",
    "education",
    "academic",
    "react",
    "supabase",
    "nodejs",
    "express",
    "tailwindcss",
    "real-time",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
